---
import ThemeToggler from "@/components/react/ThemeToggler";
---

<header
  id="header"
  class="sticky top-0 z-10 flex items-center w-full h-[70px] px-5 gap-4 bg-background transition-all overflow-hidden"
>
  <!-- Logo -->
  <a
    href="/"
    class="text-2xl font-bold italic tracking-tight hover:underline p-1"
  >
    June.
  </a>

  <!-- Spacer -->
  <div class="flex-1"></div>

  <!-- Portfolio -->
  <a
    href="/portfolio"
    class="text-sm font-extrabold italic hover:underline p-1"
  >
    Portfolio
  </a>

  <!-- About -->
  <a
    href="https://hyeonsu-jung.vercel.app/"
    target="_blank"
    rel="noreferrer"
    class="text-sm font-extrabold italic hover:underline p-1"
  >
    About
  </a>

  <!-- RSS -->
  <a
    href="/rss.xml"
    class="flex items-center justify-center w-10 h-10 rounded-full hover:bg-black/10 dark:hover:bg-white/10 transition-colors"
    aria-label="RSS Feed"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M4 11a9 9 0 0 1 9 9"></path>
      <path d="M4 4a16 16 0 0 1 16 16"></path>
      <circle cx="5" cy="19" r="1"></circle>
    </svg>
  </a>

  <!-- Theme Toggle -->
  <ThemeToggler client:load />
</header>

<script>
  const header = document.getElementById("header");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 0) {
      header?.classList.add("shadow-sm");
    } else {
      header?.classList.remove("shadow-sm");
    }
  });
</script>
