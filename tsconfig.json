{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"moduleResolution": "bundler",
		"types": ["astro/client"]
	},
	"include": ["src/**/*", "content/**/*", "portfolio/**/*", ".astro/**/*"],
	"exclude": ["node_modules", "dist"]
}
